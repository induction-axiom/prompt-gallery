rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /generated_images/{userId}/{allPaths=**} {
      // Allow write if user owns the path
      allow write: if request.auth != null && request.auth.uid == userId;
      // Allow read if user owns the path OR if the file metadata says it's public
      allow read: if request.auth != null && (request.auth.uid == userId || resource.metadata.public == "true");
    }
  }
}
